{
  "extends": ["tslint:recommended", "tslint-config-prettier", "tslint-react"],
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts",
      "coverage/lcov-report/*.js"
    ]
  },
  "rules": {
    "no-console": false,
    "use-isnan": false,
    "no-shadowed-variable": false,
    "variable-name": false,
    "no-unused-variable": true,
    "object-literal-sort-keys": false,
    "quotemark": [true, "single", "jsx-double"]
  }
}
